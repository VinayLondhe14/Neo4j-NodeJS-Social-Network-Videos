extends layout

block content
  #branding
    .picture
      a(href="/")
        img(src="https://begin-imitate.codio.io:9500/images/avatar-5.jpg", alt="Your profile picture")
    h1= title
    p #{title}

  include menu
  
  #content
    .users
      -users.forEach(function(user){
        -id = user['users']['_id']
        .user
          .avatar
            a(href="/users/#{id}")
              img(src=user['users']['properties']['picture'], alt=user['users']['properties']['name'])
          dl
            dt Name
            dd
              a(href="/users/#{id}")=user['users']['properties']['name']
            dt Gender
            dd
              a(href="/users/#{id}")=user['users']['properties']['gender']
      -})
