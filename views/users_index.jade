extends layout

block content
  #branding
    h1= title
    p #{title}

  .menu.bar
    nav
      ul
        li
          a(href="/users") All Users
        li
          a(href="/users/new") Create New User

  #content
    .users
      -users.forEach(function(user){
        .user
          dl
            -id = user['users']['_id']
            dt Name
            dd
              a(href="/users/#{id}")=user['users']['properties']['name']
            dt Gender
            dd
              a(href="/users/#{id}")=user['users']['properties']['gender']
      -})
